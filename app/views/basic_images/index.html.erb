<h1>Basic Images</h1>
<p><%= link_to "Create Image", new_basic_image_path %></p>
<% @basic_images.in_groups_of(5, false) do |image_row| %>
<div class="image_row">
<% image_row.each do |image| %>
<div class="span-3">
  <%= link_to(image_tag(image.file.url(:thumb)), image.file.url, :class => 'lightwindow', :rel=>"Assets[Basic Images]", :title=>"#{image.title}", :caption=>"#{link_to("Edit", edit_basic_image_path(image))}<br/> Used on: #{image.pages.collect{|p| link_to(p.title, edit_page_path(p))}.join('/')}", :author=>"") %>
    <p><b><%= image.title %></b></p>
  <p><%= link_to "Edit Image", edit_basic_image_path(image) %></p>
</div>
<% end %>
</div>
<% end %>
<p><%= will_paginate @basic_images %></p>
<p><%= link_to "Create Image", new_basic_image_path %></p>