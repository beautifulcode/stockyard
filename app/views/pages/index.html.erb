<h1>Listing pages</h1>
<ul>
<% @pages.each do |page| %>
  <li>
  <%= link_to page.title, page %>
  <%= link_to 'Edit', edit_page_path(page) %>
  <%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %>
  </li>
<% end.else do %>
  <li>No Pages</li>
<% end %>
</ul>

