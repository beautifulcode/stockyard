<h1>All <%= @asset_class.to_s.underscore.humanize.titlecase.pluralize %></h1>
<ul>
<% @assets.each do |asset| %>
  <li>
    <%= link_to asset.title, asset %> |
    <%= link_to "Edit", edit_polymorphic_path(asset) %> |
    <%= link_to "Delete", asset, :confirm => "Are you sure?", :method => 'delete' %>

  </li>
<% end %>
</ul>
<p><%= link_to "New #{@asset_class.to_s.underscore.humanize.titlecase}", :action => 'new' %></p>
<%= will_paginate @assets %>