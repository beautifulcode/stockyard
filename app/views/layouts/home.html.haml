!!! Transitional
%html
  %head
    %title= "Medical Marijuana"
    %meta{:name => 'keywords', :content => page_keywords}
    %meta{:name => 'description', :content => page_meta_description}
    = stylesheet_link_tag 'blueprint', 'application', 'lightwindow'
    = javascript_include_tag :defaults, "lightwindow", "swfobject"
    = "<!--[if IE]>#{stylesheet_link_tag 'ie', :media => 'screen'}<![endif]-->"
  %body.home
    #site
      #header
        = render :partial => "shared/header"
        
      #features
        #feature_primary
          =link_to(image_tag('/images/primary_feature.jpg'), '/for-patients/how-our-service-works')
        %script
          swfobject.embedSWF("/flash/banner.swf", "feature_primary", "640", "240", "9.0.0");
          
        = yield :featured
        #feature_secondary
          =link_to(image_tag('/images/secondary_feature.jpg'), '/for-patients/apply-medical-marijuana')

      #content
        #primary_content
          = yield :main
            
            
        #secondary_content
          %h3 + learning center
          = yield :side
            
          .rule
          
          %h3 + news
          = yield :news


        .clear
      #footer
        = render :partial => '/shared/footer'
    = render :partial => '/shared/google_analytics'